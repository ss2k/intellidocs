    <!-- FILE LIST -->
    <!-- ########## -->
    <div id="file-list">
    <center>
      <% if !@assets.empty? %>
        <% if params[:q] %>
          <%= "#{pluralize(@assets.count,"result")}" %> found.
        <% else %>
          <h2>Here are your most recent files</h2>
        <% end %>
    </center>
        <table class="item-list">
            <tr>
                <th>Name</th>
                <th>Notes</th>
                <th>Kind</th>
                <th>Uploaded</th>
            </tr>
            <% @assets.each do |a| %>
              <tr class="<%= get_class(get_extension(a.asset.file.filename)) %>">
                  <td><%= link_to a.asset.file.filename, a.asset.url %></td>
                  <td><%= a.notes %></td>
                  <td><%= get_kind(get_extension(a.asset.file.filename)) %></td>
                  <td><%= a.created_at.strftime("%m/%d/%Y") %></td>
              </tr>
            <% end %>
        </table>
            <% else %>
      <center><h2>No results found</h2></center>
    <% end %>
    </div>

